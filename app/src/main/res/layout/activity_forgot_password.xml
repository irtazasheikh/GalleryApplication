<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.privategalleryapplication.ForgotPassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the super password to show login details"
        android:id="@+id/textView18"
        android:textSize="15.5dp"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="8"
        android:id="@+id/superPassword"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/forgotButton"
        android:layout_below="@+id/superPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="forgotPasswordBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared Gallery Password :"
        android:id="@+id/textView19"
        android:textStyle="bold"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/forgotButton"
        android:layout_toStartOf="@+id/sharedPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secret Gallery Pasword :"
        android:id="@+id/textView20"
        android:textStyle="bold"
        android:layout_below="@+id/textView19"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sharedPassword"
        android:layout_alignTop="@+id/textView19"
        android:paddingLeft="5dp"
        android:layout_alignEnd="@+id/forgotButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secretPassword"
        android:layout_alignBottom="@+id/textView20"
        android:paddingLeft="5dp"
        android:layout_toEndOf="@+id/textView20" />
</RelativeLayout>
